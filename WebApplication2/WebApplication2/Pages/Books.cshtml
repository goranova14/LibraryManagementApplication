@page
@model WebApplication2.Pages.BooksModel
@{
    Layout = "_ItemLayout";}
    <head>
                    <link rel="canonical" href="https://getbootstrap.com/docs/5.2/examples/album/">
                    <link href="../assets/dist/css/bootstrap.min.css" rel="stylesheet">
                        <link href="~/css/BookPage.css" rel="stylesheet">

    </head>
  
    <body>    

                <main>

                  <div class="album py-5 bg-light">
                    <div class="container">

                      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                        <div class="col">

                       @foreach (var item in Model.Book)
                            {
                                
                          <div class="card shadow-sm">
                          <h1>@item.Title</h1>
                          <h2>@item.Author</h2>
                          <svg class="bd-placeholder-img card-img-top" width="100%" height="225" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><image @item.Image> width="100%" height="225"></image></svg>

                            <div class="card-body">@item.Description

                              <p class="card-text">>
                                <div class="btn-group">
                                  @*<a asp-page="/IndividualItem" asp-route-id="@item.Id">View more</a>*@
                                </div>
                            </div>
                         </div>
  }
                                        </div>
                                    </div>
                        
                    </div>
                  </div>

                </main>

                <footer class="text-muted py-5">
                  <div class="container">
                  </div>
                </footer>
                <script src="../assets/dist/js/bootstrap.bundle.min.js"></script>
    </body>


