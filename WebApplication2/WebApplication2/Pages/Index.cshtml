@page

@model IndexModel
@{
    Layout="Layout1";
}


    <body class="text-center">

        <main class="form-signin w-100 m-auto">
            <form method="post">
               
                <h1 class="h3 mb-3 fw-normal">Please log in</h1>

                <div class="form-floating">
                    <input asp-for="Person.Username" class="form-control" id="floatingInput" placeholder="denica1812">
                    <label asp-for="Person.Username">Username</label>
                </div>
                <div class="form-floating">
                    <input asp-for="Person.Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                    <label asp-for="Person.Password">Password</label>
                </div>
            <input class="w-100 btn btn-lg btn-primary" type="submit">Login</input>
            </form>
        </main>
    </body>
          <p> @ViewData["MessageAlert"] </p>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
 } 